<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gpOvo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmarPizza">

    <Button
        android:id="@+id/btnPizzaFact"
        android:layout_width="135dp"
        android:layout_height="71dp"
        android:layout_marginBottom="12dp"
        android:text="Salvar Pizza"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnDescartar"
        android:layout_width="135dp"
        android:layout_height="71dp"
        android:layout_marginBottom="16dp"
        android:text="Descartar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/GroupPizza"
        android:layout_width="95dp"
        android:layout_height="103dp"
        android:layout_marginEnd="411dp"
        android:layout_marginBottom="731dp"
        app:constraint_referenced_ids="imAbacaxi,imFrango,imPresunto,imPizzaBase,imOvo,imMilho,imTomatos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imPizzaBase"
        android:layout_width="341dp"
        android:layout_height="341dp"
        android:layout_marginTop="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/pizzaria_em_barueri_fratelli_13" />

    <ImageView
        android:id="@+id/imOvo"
        android:layout_width="201dp"
        android:layout_height="201dp"
        android:layout_marginTop="208dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ovo_cozido_2" />

    <ImageView
        android:id="@+id/imAbacaxi"
        android:layout_width="201dp"
        android:layout_height="201dp"
        android:layout_marginTop="208dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/abacaxi_cortado" />

    <ImageView
        android:id="@+id/imTomatos"
        android:layout_width="201dp"
        android:layout_height="201dp"
        android:layout_marginTop="208dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/b_6e17076213024c40b829c8bf4c727bc2" />

    <ImageView
        android:id="@+id/imFrango"
        android:layout_width="201dp"
        android:layout_height="201dp"
        android:layout_marginTop="208dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/frang" />

    <ImageView
        android:id="@+id/imMilho"
        android:layout_width="201dp"
        android:layout_height="201dp"
        android:layout_marginTop="208dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/milho" />

    <ImageView
        android:id="@+id/imPresunto"
        android:layout_width="201dp"
        android:layout_height="201dp"
        android:layout_marginTop="208dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/presunto_fatiado_500x500" />
</androidx.constraintlayout.widget.ConstraintLayout>